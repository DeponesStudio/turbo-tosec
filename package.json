{
  "name": "turbo-tosec",
  "version": "1.0.0",
  "description": "> **High-performance, DuckDB-based importer to query TOSEC databases at light speed.**",
  "main": "index.js",
  "scripts": {
    "test": "python -m pytest",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeponesLabs/turbo-tosec.git"
  },
  "keywords": [
    "tosec",
    "retro-gaming",
    "emulation",
    "dat-files",
    "rom-management",
    "duckdb",
    "python",
    "cli",
    "data-engineering",
    "etl",
    "parquet",
    "xml-parser",
    "high-performance"
  ],
  "author": "Berk Acunas & Depones Labs",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/berkacunas/turbo-tosec/issues"
  },
  "homepage": "https://github.com/berkacunas/turbo-tosec#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo \"__version__ = '${nextRelease.version}'\" > src/turbo_tosec/_version.py && sed -i 's/turbo-tosec_v[0-9.]*/turbo-tosec_v${nextRelease.version}/g' README.md README.tr.md && sed -i 's/version = \"[0-9.]*\"/version = \"${nextRelease.version}\"/' pyproject.toml"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "pyproject.toml",
            "src/turbo_tosec/_version.py",
            "README.md",
            "README.tr.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
