{
    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python Debugger: Current File",
            "type":"debugpy",
            "request":"launch",
            "program":"${file}",
            "console":"integratedTerminal",
            "args": [
                "--input", 
                "${workspaceFolder}/TEST_DATS",
                "--output",
                "tosec_2012.duckdb",
                "--workers", 
                "1"
            ]
        },
        {
            "name": "Debug: Turbo-TOSEC (Staged Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "turbo_tosec.cli", 
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "scan",
                "--input", 
                "${workspaceFolder}/TEST_DATS/TOSEC-v2016-11-11",
                "--staged", 
                "--workers", 
                "4",
                "--temp-dir",
                "debug_temp_chunks"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug: Turbo-TOSEC (Direct Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "turbo_tosec.cli",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "scan",
                "--input", 
                "${workspaceFolder}/TEST_DATS/TOSEC-v2016-11-11",
                "--output",
                "${workspaceFolder}/TEST_DATS/direct.duckdb",
                "--direct"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}